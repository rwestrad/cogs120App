	</head>
	<body>
		{{>navbar}}

		</div>

			<div class="status-screen">
						<h4>TOTAL APPLIED<br>10</h4>
						<h4>OPEN<br>8</h4>
						<h4>CLOSED<br>2</h4>
			</div>



		<div class="subject-header-yellow">
			<h2>FAVORITES</h2>
		</div>
		<div class="center">
			<ul>
				{{#each currentApplications}}
					{{#if favorited}}
						<li id="{{id}}" onclick="seeCompany(this.id)">{{name}} - {{position}}<span><img src="/images/star.png" alt=""></span></li>
					{{/if}}
				{{/each}}
			</ul>
		</div>
		<div class="subject-header-yellow">
			<h2>OFFERS</h2>
		</div>
		<div class="center">
			<h4><p>None Yet!</p></h4>
		</div>
		{{#if viewAlt }}
		<div class="center">
			<br class="jumboBr">
			<button style="background-color:#155263; color:white" onclick="goToAddPage()">
				ADD APPLICATION
			</button>
		</div>
		{{/if}}

	</body>

	<script type="text/javascript">

		function seeCompany(coID) {
			localStorage.setItem('myStorage', coID);
			window.location.href = '/application';
		}

		function goToAddPage() {
			window.location.href = '/add-application';
		}
	</script>
</html>
