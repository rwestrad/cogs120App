		<link rel="stylesheet" href="/css/bootstrap-theme.css">
		<link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
		<link rel="stylesheet" type="text/css" href="/css/navbar.css">
		<link rel="stylesheet" href="/css/master.css">
		<link rel="stylesheet" href="/css/style.css">
		<title>Add Application Page</title>
	</head>
	<body>

		<nav class="navbar navbar-expand-md bg-dark navbar-dark" style="background-color: #4A846F !important; margin-bottom: 0">
      <a class="navbar-brand" href="/home">F L E X</a>
      <button id="navBtn" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/view-applications">View Applications</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/add-application">Add Application</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/">Logout</a>
          </li>
        </ul>
        <form class="form-inline">
          <input class="form-control mr-sm-2" type="text" placeholder="Search">
          <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>

		<div class="subject-header">
				<h2>ADD APPLICATION</h2>
		</div>
		<div class="container">
			<br>
			<form class="" action="/add" method="get">
				<label><p>Company Name</p></label><br><input name="companyName" id="companyName" type="text"><br>
				<label><p>Position</p></label><br><input name="position" id="position" type="text"><br>
				<select name="stage">
					<option disabled selected>Stage ...</option>
					<option>Phone Screen</option>
					<option>First Interview</option>
					<option>Coding Challenge</option>
					<option>Negotiation</option>
				</select>
				<label><p>Contact Info</p></label><br><textarea name="contactInfo" rows="2" cols="80"></textarea><br>
				<label><p>Website | Portal URL</p></label><br><input name="website" type="text"><br>
			<!-- </form> -->
			<br>
			<label><p>Add Notes<h3>+</h3></p></label><br>
			<div class="center">
				<button id="addBtn" type="submit">ADD</button>
				<button id="cancelBtn" type="reset" class="cancelBtn">CANCEL</button>
			</div>
			</form>
		</div>
	</body>
	<script type="text/javascript">
		$('#navBtn').css({
			'width': '10%',
			'margin': '0',
			'padding': '0',
			'border-radius': 'none',
			'box-shadow': 'none',
			'border': 'none'
		});
		document.getElementById('addBtn').onclick = function() {
			window.location.href = '/view-applications';
		}
		document.getElementById('cancelBtn').onclick = function() {
			window.location.href = '/view-applications';
		}
	</script>
</html>
